<div class='row'>
  <form class='col s12'>
    <div class='row'>
      <div class='input-field col s12'>
        {{input id='name' class='validate' value=name}}
        <label for='name'>Title</label>
      </div>
      <div class='input-field col s12'>
        {{#if model}}
          {{input id='url' class='validate' value=url}}
        {{else}}
          {{input placeholder='http://' id='url' class='validate' value=url}}
        {{/if}}    
        <label for='url'>URL</label>
      </div>
      <div class='input-field col s12'>
        <button class='btn waves-effect waves-light' id='submit' type='submit' {{action 'submit'}}>
          Submit
          <i class='mdi-content-send right'></i>
        </button>      
      </div>
    </div>
  </form>
</div>

{{#if model}}
  <button class="waves-effect waves-light btn red" {{action 'delete'}}><i class="mdi-action-delete left"></i>Delete</button>
{{/if}}    